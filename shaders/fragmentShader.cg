float4 main(
	float2 pass_textureCoords : TEXCOORD0,
	float3 diffuse : COLOR,
	float3 finalSpecular: COLOR1,
	uniform sampler2D textureSampler)
{
	float4 result1 = tex2D(textureSampler, pass_textureCoords);
	result1 *= float4(diffuse, 1.0f);
	result1 += float4(finalSpecular, 1.0f);

	return result1;
}
